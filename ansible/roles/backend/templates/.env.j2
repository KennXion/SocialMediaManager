# Application
APP_ENV={{ environment | default('development') }}
DEBUG={{ debug | default('true') }}
SECRET_KEY={{ secret_key | default('your-secret-key-change-in-production') }}
API_PREFIX={{ api_prefix | default('/api') }}

# CORS
CORS_ORIGINS={{ cors_origins | default('http://localhost:3000') }}

# Database
DATABASE_URL={{ database_url | default('postgresql+psycopg://dbadmin:devpassword@localhost:5432/social_media_manager_db') }}
DATABASE_TEST_URL={{ database_test_url | default('postgresql+psycopg://postgres:postgres@localhost:5432/social_media_manager_test') }}

# JWT
JWT_SECRET_KEY={{ jwt_secret_key | default('your-jwt-secret-key-change-in-production') }}
JWT_ALGORITHM={{ jwt_algorithm | default('HS256') }}
JWT_ACCESS_TOKEN_EXPIRE_MINUTES={{ jwt_access_token_expire_minutes | default('30') }}
JWT_REFRESH_TOKEN_EXPIRE_DAYS={{ jwt_refresh_token_expire_days | default('7') }}

# AI Provider
OPENAI_API_KEY={{ openai_api_key | default('') }}

# Redis (for scheduler)
REDIS_HOST={{ redis_host | default('localhost') }}
REDIS_PORT={{ redis_port | default('6379') }}
REDIS_PASSWORD={{ redis_password | default('') }}
REDIS_DB={{ redis_db | default('0') }}

# Social Media API Keys
# Twitter
TWITTER_API_KEY={{ twitter_api_key | default('') }}
TWITTER_API_SECRET={{ twitter_api_secret | default('') }}
TWITTER_ACCESS_TOKEN={{ twitter_access_token | default('') }}
TWITTER_ACCESS_TOKEN_SECRET={{ twitter_access_token_secret | default('') }}

# Facebook
FACEBOOK_APP_ID={{ facebook_app_id | default('') }}
FACEBOOK_APP_SECRET={{ facebook_app_secret | default('') }}

# Instagram
INSTAGRAM_APP_ID={{ instagram_app_id | default('') }}
INSTAGRAM_APP_SECRET={{ instagram_app_secret | default('') }}

# LinkedIn
LINKEDIN_CLIENT_ID={{ linkedin_client_id | default('') }}
LINKEDIN_CLIENT_SECRET={{ linkedin_client_secret | default('') }}

# TikTok
TIKTOK_CLIENT_KEY={{ tiktok_client_key | default('') }}
TIKTOK_CLIENT_SECRET={{ tiktok_client_secret | default('') }}

# YouTube
YOUTUBE_API_KEY={{ youtube_api_key | default('') }}
